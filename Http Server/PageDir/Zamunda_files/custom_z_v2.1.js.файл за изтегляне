    $("i[class^='like-btn']").on('click', function (e) {
      e.preventDefault();

            var $before = $(this);
            
            
                $("#people_"+$before.attr("tid")+"").hide();
            $("#people_"+$before.attr("tid")+"").show();
            
            $.ajax({
                type:"POST",
                url:"user_action.php",
                data:'act=like&tid='+$(this).attr('tid'),
                success: function(result){
                


                var obj = jQuery.parseJSON( result );

                if (obj.added == "added") {
                $before.addClass('like-h'); 

                var $numlikes=$("#numlikes_"+$before.attr('tid')+"");
                var $numlikespercent=$("#numlikespercent_"+$before.attr('tid')+"");
             
                
            

               
                $(".dislike-btn_"+$before.attr("tid")+"").removeClass('dislike-h'); 

                
                var $result=obj.result;
                var $total_people=obj.total;

                var $percent=Math.round($result/2.4);

                

                $numlikes.fadeOut( "fast", function() {
                  $numlikes.html(""+$result+"%");
                  $numlikespercent.removeAttr('style');
                  $numlikespercent.css('width',''+$percent+'');
                  $("#people_total_"+$before.attr("tid")+"").html(" "+$total_people+"");
                  
                });

                $numlikes.fadeIn( "fast", function() {
                });


                

                }


                }
            });

        });
        
        $("i[class^='dislike-btn']").on('click', function (e) {
      e.preventDefault();

            var $before = $(this);
            

            $("#people_"+$before.attr("tid")+"").hide();
            $("#people_"+$before.attr("tid")+"").show();
            
            $.ajax({
                type:"POST",
                url:"user_action.php",
                data:'act=dislike&tid='+$(this).attr('tid'),
                success: function(result){

                var obj = jQuery.parseJSON( result );

                if (obj.added == "added") {

                $before.addClass('dislike-h');  

                var $numlikes=$("#numlikes_"+$before.attr('tid')+"");
                var $numlikespercent=$("#numlikespercent_"+$before.attr('tid')+"");
                

               
                $(".like-btn_"+$before.attr("tid")+"").removeClass('like-h'); 

                
         
                var $result=obj.result;
                var $total_people=obj.total;
                var $percent=Math.round($result/2.4);

                


                $numlikes.fadeOut( "fast", function() {
                  $numlikes.html(""+$result+"%");
                  $numlikespercent.removeAttr('style');
                  $numlikespercent.css('width',''+$percent+'');

                  $("#people_total_"+$before.attr("tid")+"").html(" "+$total_people+"");
          });

                $numlikes.fadeIn( "fast", function() {
          });

               
                }


                }
            });
        
        });

      


        $("i[class^='favorite-btn']").on('click', function (e) {
      e.preventDefault();

            var $before = $(this);
            
            $.ajax({
                type:"POST",
                url:"user_action.php",
                data:'act=favorite&tid='+$(this).attr('tid'),
                success: function(result){  
                var $noteadded=$("#note_added_"+$before.attr('tid')+"");
                var $noteremoved=$("#note_removed_"+$before.attr('tid')+"");

                if (result == "added") {
                $before.addClass('favorite-h'); 

                var $numfavs=$("#numfavs_"+$before.attr('tid')+"");
              

                $noteremoved.hide();
                $noteadded.show();

                var timeout = setTimeout(function() {
                $noteadded.fadeOut( "fast", function() {
                 $noteadded.hide();
                 clearTimeout(timeout);
                });
                }, 3000);
                

                $numfavs.fadeOut( "fast", function() {
                  $numfavs.html(parseInt($numfavs.text())+1);
                });

                $numfavs.fadeIn( "fast", function() {
                });

                

                }
                if (result == "removed") {
                $before.removeClass('favorite-h');

                var $numfavs=$("#numfavs_"+$before.attr('tid')+"");
              
                $noteadded.hide();
                $noteremoved.show();
                var timeout = setTimeout(function() {

                
                $noteremoved.fadeOut( "fast", function() {
                 $noteremoved.hide();
                  clearTimeout(timeout);
                });
               

                }, 3000);
               

                $numfavs.fadeOut( "fast", function() {
                  $numfavs.html(parseInt($numfavs.text())-1);
                });
                $numfavs.fadeIn( "fast", function() {
                });

                }


                }
            });

        });

    });





function msieversion() {

        var ua = window.navigator.userAgent;
        var msie = ua.indexOf("MSIE ");

        if (msie > 0 || !!navigator.userAgent.match(/Trident.*rv\:11\./))      // If Internet Explorer, return version number
            alert(parseInt(ua.substring(msie + 5, ua.indexOf(".", msie))));
        else                 // If another browser, return 0
            alert('otherbrowser');

   return false;
}



$(document).scroll(function() {
  var y = $(this).scrollTop();
 
  if (y > 80) {

//$("ins[data-revive-zoneid='30']").attr("data-revive-id",""+ $("ins[data-revive-zoneid='30']").attr("data-revive-id-old") +"");
//$("ins[data-revive-zoneid='30']").removeAttr("data-revive-id-old");

    if ($('.unique-floatingbox').is(":hidden")) {
    $('.unique-floatingbox').show();
    }
  }
  else {
    if (y < 10) {
    if ($('.wallpaperclick_top').is(":visible") && $('#floatingbox').height() != "90") {
  $('.unique-floatingbox').hide();
  }
}
  }
  if ($('.unique-floatingbox').is(":visible")) {
  if ($(window).scrollTop() > ($(this).height() - $(window).height() - 110)) {
    
    
    $('.unique-floatingbox').hide();
  }
  }


  if (y > 250 && $('.lefthb:not([style])')) {
    
    $('.lefthb').attr('style','position:fixed !important;top:0px;left: 7px;');
  }
  else {
    if ($('.lefthb[style]')) {
    $('.lefthb').removeAttr('style');
    }
  }

  if (y > 250 && $('.righthb:not([style])')) {
    $('.righthb').attr('style','position:fixed !important;top:0px;right: 7px;');
  }
  else {
    if ($('.righthb[style]')) {
    $('.righthb').removeAttr('style');
  }
  }

//  if($(window).scrollTop() + $(window).height() == $(document).height() && $('#floatingbox').width() > 400) {
       //$('#floatingbox').hide();
 //  }

  

});

