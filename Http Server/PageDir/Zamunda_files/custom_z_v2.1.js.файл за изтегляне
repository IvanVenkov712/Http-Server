$('body').on('click', 'div.playstage', function(e){
    e.preventDefault();
    e.stopPropagation();
    $this = $('#candidate_playlist');
    $this.attr('src',''+$this.attr('src')+'&autoplay=1');
    $(".playstage").hide();
    $(".stageleftspotlight").css("display","none");
    $(".stagerightspotlight").css("display","none");
  });

