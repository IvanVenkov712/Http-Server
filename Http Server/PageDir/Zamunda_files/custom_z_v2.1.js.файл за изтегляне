$(document).ready(function(){


var ismobile=getCookie('ismobile');
if (!ismobile) {
if( /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent) ) {
    setCookie('ismobile','yes',1);
}
else {
  setCookie('ismobile','no',1);
}
