
 function fbShare(url, title, descr, image, winWidth, winHeight, id, type) {

    
        var winTop = (screen.height / 2) - (winHeight / 2);
        var winLeft = (screen.width / 2) - (winWidth / 2);

        var content_id= id;
        var content_type=type;

        $( function() {
      
         $.ajax({
                type:"POST",
                url:"user_action.php",
                data:'act=share&id='+ content_id +'&type='+ content_type +'&method=facebook&url='+ url,
                success: function(result){

                
                
                }
            });
     
          });
//window.open('/fbshare.php?frame='+encodeURIComponent('http://www.facebook.com/sharer.php?s=100&p[title]=' + title + '&p[summary]=' + descr + '&p[url]=' + url + '&p[images][0]=' + image +''), 'sharer', 'top=' + winTop + ',left=' + winLeft + ',toolbar=0,status=0,width=' + winWidth + ',height=' + winHeight);
        
        window.open('https://www.facebook.com/sharer.php?s=100&p[title]=' + title + '&p[summary]=' + descr + '&p[url]=' + url + '&p[images][0]=' + image, 'sharer', 'top=' + winTop + ',left=' + winLeft + ',toolbar=0,status=0,width=' + winWidth + ',height=' + winHeight);
        
    }


  function twitterShare(url, title, descr, image, winWidth, winHeight, id, type) {
        var winTop = (screen.height / 2) - (winHeight / 2);
        var winLeft = (screen.width / 2) - (winWidth / 2);


        var content_id= id;
        var content_type=type;

        $( function() {
     
         $.ajax({
                type:"POST",
                url:"user_action.php",
                data:'act=share&id='+ content_id +'&type='+ content_type +'&method=twitter&url='+ url,
                success: function(result){

                
                
                }
            });
     
          });

        window.open('https://twitter.com/share?text=' + image + ' @wwwzamundanet&url=' + url + '', 'sharer', 'top=' + winTop + ',left=' + winLeft + ',toolbar=0,status=0,width=' + winWidth + ',height=' + winHeight);
        
    }   

    function emailShare(url, title, descr, image, winWidth, winHeight, id, type) {
        var winTop = (screen.height / 2) - (winHeight / 2);
        var winLeft = (screen.width / 2) - (winWidth / 2);
        window.open('/email_share.php?text=' + image + '&url=' + url + '&type=' + type + '&id=' + id + '', 'sharer', 'top=' + winTop + ',left=' + winLeft + ',toolbar=0,status=0,width=550,height=500');
        
    } 

