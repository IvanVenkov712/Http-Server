	function checkAll(id){
   var f = document.getElementById(id);
   var inputs = f.getElementsByTagName("input");
   for(var t = 0;t < inputs.length;t++){
     if(inputs[t].type == "checkbox" && inputs[t].name != "bgsubs" && inputs[t].name != "bgaudio" && inputs[t].name != "published" && inputs[t].name != "bookname")
       inputs[t].checked = true;
   if (id == "browse_cats") {
   	   if ($('input[name="'+inputs[t].name+'"]')) {
	   $('input[name="'+inputs[t].name+'"]').prop('checked', true);
	   }
	}
   }
 }

	
 function uncheckAll(id){
   var f = document.getElementById(id);
   var inputs = f.getElementsByTagName("input");
   for(var t = 0;t < inputs.length;t++){
     if(inputs[t].type == "checkbox" && inputs[t].name != "bgsubs" && inputs[t].name != "bgaudio" && inputs[t].name != "published" && inputs[t].name != "bookname")
       inputs[t].checked = false;
   if (id == "browse_cats") {
   if ($('input[name="'+inputs[t].name+'"]')) {
	   $('input[name="'+inputs[t].name+'"]').prop('checked', false);
	   }
	}
   }
 }
 function invertAll(id){
   var f = document.getElementById(id);
   var inputs = f.getElementsByTagName("input");
   for(var t = 0;t < inputs.length;t++){
     if(inputs[t].type == "checkbox" && inputs[t].name != "bgsubs" && inputs[t].name != "bgaudio" && inputs[t].name != "published" && inputs[t].name != "bookname")
       inputs[t].checked = !inputs[t].checked;

   		if (id == "browse_cats") {	
   	   if (inputs[t].checked == true) {
   	   	if ($('input[name="'+inputs[t].name+'"]')) {
	   $('input[name="'+inputs[t].name+'"]').prop('checked', true);
	   }
   	   }
   	   if (inputs[t].checked == false) {
   	   	if ($('input[name="'+inputs[t].name+'"]')) {
	   $('input[name="'+inputs[t].name+'"]').prop('checked', false);
	   }
   	   }
   	    }
   	   


   }
 }
 

function setCookie(name,value,days) {

  if(location.hostname == "zamunda.ch"){
  domain = "zamunda.ch";
  }
  else {
  domain = "zamunda.net";
  }

    if (days) {
        var date = new Date();
        date.setTime(date.getTime()+(days*24*60*60*1000));
        var expires = "; expires="+date.toGMTString();
    }
    else var expires = "";
    document.cookie = name+"="+value+expires+"; domain=."+domain+";path=/";
}

function setCookiemins(name,value,minutes) {

  if(location.hostname == "zamunda.ch"){
  domain = "zamunda.ch";
  }
  else {
  domain = "zamunda.net";
  }

    if (minutes) {
        var date = new Date();
        date.setTime(date.getTime()+(minutes*60*1000));
        var expires = "; expires="+date.toGMTString();
    }
    else var expires = "";
    document.cookie = name+"="+value+expires+"; domain=."+domain+";path=/";
}

function getCookie(name) {
    var nameEQ = name + "=";
    var ca = document.cookie.split(';');
    for(var i=0;i < ca.length;i++) {
        var c = ca[i];
        while (c.charAt(0)==' ') c = c.substring(1,c.length);
        if (c.indexOf(nameEQ) == 0) return c.substring(nameEQ.length,c.length);
    }
    return null;
}

function deleteCookie(name) {
    setCookie(name,"",-1);
}


$(window).load(function() {

var getcookie_width=getCookie('swidth');
var getcookie_height=getCookie('sheight');

if (!getcookie_width || !getcookie_height) {

var swidth=Number(screen.availWidth);
var sheight=Number(screen.availHeight);
setCookie('swidth',swidth);
setCookie('sheight',sheight);
}

if (Number(screen.availHeight) < 700) {
  
}
});

