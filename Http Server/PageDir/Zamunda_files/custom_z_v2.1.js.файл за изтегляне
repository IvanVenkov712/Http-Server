$(document).on('mousedown', function (e) {

    if ($(e.target).closest(".category_scroll").length === 0 && $(e.target).attr('id') != "categories") {
        $(".category_scroll").hide();
    }
});

$(document).on('touchstart', function (event) {
    if (!$(event.target).closest('.category_scroll').length && $(e.target).attr('id') != "categories") {
        $('.category_scroll').hide();
    }
});


$(document).on('mousedown', function (e) {

    if ($(e.target).closest(".sharebox").length === 0 && $(e.target).attr('id') != "sharebox_b") {
        $('[id="sharebox_b"]').addClass("inactive");

        $('.sharebox').removeClass("show");
        $('[id="sharebox_b"]').removeClass("active");
    }
});

$(document).on('touchstart', function (event) {
    if (!$(event.target).closest('.sharebox').length && $(e.target).attr('id') != "sharebox_b") {
       $('[id="sharebox_b"]').addClass("inactive");
        $('.sharebox').removeClass("show");
        $('[id="sharebox_b"]').removeClass("active");
    }
});



