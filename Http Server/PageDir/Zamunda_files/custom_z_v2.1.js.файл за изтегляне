    //this function is used to activate the sharebox by clicking on share button
  $('body').on('click', 'i.share-button.inactive', function(e){
    e.preventDefault();
    e.stopPropagation();

    $('[id="sharebox_b"]').addClass("inactive");

    $('.sharebox').removeClass("show");
    $('[id="sharebox_b"]').removeClass("active");


    $this = $(this);
    $this.removeClass('inactive').addClass('active');


    $this.next('.sharebox').addClass('show');
  });


  //this function is used to deactivate the sharebox by clicking on share button
  $('body').on('click', 'i.share-button.active', function(e){
    e.preventDefault();
    e.stopPropagation();
    $this = $(this);
    $this.removeClass('active').addClass('inactive');
    $this.next('.sharebox').removeClass('show');
  });


